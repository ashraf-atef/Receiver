<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/nav_header_layout">
    <!--android:background="@drawable/background"-->



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_userimage"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/user"
        app:border_color="#FF000000"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_username"
        android:layout_toStartOf="@+id/tv_username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akash Bangad"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/tv_username"
        android:layout_above="@+id/tv_useremail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akash.bangad93@gmail.com"
        android:id="@+id/tv_useremail"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="@android:color/tertiary_text_light"
        android:layout_alignBottom="@+id/img_userimage"
        android:layout_alignLeft="@+id/tv_username"
        android:layout_alignStart="@+id/tv_username" />

</RelativeLayout>