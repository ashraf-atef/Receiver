<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashraf.receiver.Login.SignInUpFragment.SignInUpFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:textColor="#FFFFFF"
        android:text="Tracking"
        android:gravity="center"
        android:fontFamily="cursive"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="140dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:text="Track any vehicle any time any where"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/pad_20dp"
        android:layout_marginRight="@dimen/pad_20dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fontFamily="serif"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="@dimen/txt_20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/pad_10dp">

            <Button
                android:layout_width="0dp"
                android:id="@+id/button3"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:textColor="@color/colorAccent"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_20sp"
                android:fontFamily="serif"
                android:layout_marginRight="@dimen/pad_3dp"
                />
            <Button
                android:layout_width="0dp"
                android:id="@+id/singUpWtithGoogleButton"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Sign Up With Google"
                android:textAllCaps="false"
                android:textSize="@dimen/txt_20sp"
                android:fontFamily="serif"
                android:layout_marginLeft="@dimen/pad_3dp"
                android:background="@drawable/border"
                />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
